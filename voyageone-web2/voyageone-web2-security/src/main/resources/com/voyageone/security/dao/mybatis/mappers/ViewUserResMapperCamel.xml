<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.voyageone.security.dao.ViewUserResDao" >
    <resultMap id="BaseResultMap" type="java.util.Map" />
    <sql id="Base_Column_List" >
        `id`, `res_name`, `res_key`, `res_type`, `parent_id`, `res_url`, `icon`, `application`
        `active`, `description`, `created`, `creater`, `modified`, `modifier`,`role_id`,`channel_id`,`user_id`
    </sql>

    <select id="selectResByUserChannel" resultMap="BaseResultMap" >
        select DISTINCT
        <include refid="Base_Column_List" />
        from view_user_res
        <where >
            <if test="application != null" >
                and `application` = #{application,jdbcType=VARCHAR}
            </if>
            <if test="userId != null" >
                and `user_id` = #{userId,jdbcType=VARCHAR}
            </if>
            <if test="channelId != null" >
                and `channel_id` = #{channel_id,jdbcType=VARCHAR}
            </if>
        </where>
    </select>


</mapper>