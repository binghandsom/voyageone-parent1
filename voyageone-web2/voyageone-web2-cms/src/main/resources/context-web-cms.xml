<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
     http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">
    <!-- DAO相关配置 -->
    <import resource="classpath*:dao-mongo-collecion-mapping.xml"/>
    <import resource="classpath*:context-test-datasource.xml" />
    <import resource="classpath*:context-test-datasource-mongo.xml" />
	<!-- 异常处理 -->
	<bean id="exceptionHandler" class="com.voyageone.web2.base.ExceptionHandler"/>
    <!-- 配置内容初始化Bean -->
    <bean id="commonConfigInit" class="com.voyageone.common.configs.Initializer" init-method="init"/>

    <!-- REST SDK 配置 -->
    <bean id="restTemplate" class="org.springframework.web.client.RestTemplate"/>
    <bean id="voApiDefaultClient" class="com.voyageone.web2.sdk.api.VoApiDefaultClient">
        <constructor-arg ref="restTemplate" />
        <constructor-arg name="serverUrl" value="http://localhost:8080/rest"/>
        <constructor-arg name="connectTimeout" value="3000"/><!-- ms -->
        <constructor-arg name="readTimeout" value="90000"/><!-- ms -->
    </bean>

</beans>