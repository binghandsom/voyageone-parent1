<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.voyageone.web2.cms.sql">
    <resultMap id="PriceLogMap" type="com.voyageone.web2.cms.model.CmsBtPriceLogModel">
        <id column="seq" property="seq" jdbcType="INTEGER" />
        <result column="channelId" property="channelId" jdbcType="VARCHAR" />
        <result column="product_id" property="productId" jdbcType="INTEGER" />
        <result column="code" property="code" jdbcType="VARCHAR" />
        <result column="sku" property="sku" jdbcType="VARCHAR" />
        <result column="msrp_price" property="msrpPrice" jdbcType="DECIMAL" />
        <result column="retail_price" property="retailPrice" jdbcType="DECIMAL" />
        <result column="sale_price" property="salePrice" jdbcType="DECIMAL" />
        <result column="created" property="created" jdbcType="TIMESTAMP" />
        <result column="creater" property="creater" jdbcType="VARCHAR" />
        <result column="modified" property="modified" jdbcType="TIMESTAMP" />
        <result column="modifier" property="modifier" jdbcType="VARCHAR" />
    </resultMap>

    <select id="select_price_log_by_code" resultMap="PriceLogMap" parameterType="String">
        select
            log.seq,
            log.channelId,
            log.product_id,
            log.code,
            log.sku,
            log.msrp_price,
            log.retail_price,
            log.sale_price,
            log.created,
            log.creater,
            log.modified,
            log.modifier
        from voyageone_cms2.cms_bt_price_log log
        where log.code = #{code}
        order by log.seq
    </select>

    <select id="select_price_log_by_sku" resultMap="PriceLogMap" parameterType="String">
        select
            log.seq,
            log.channelId,
            log.product_id,
            log.code,
            log.sku,
            log.msrp_price,
            log.retail_price,
            log.sale_price,
            log.created,
            log.creater,
            log.modified,
            log.modifier
        from voyageone_cms2.cms_bt_price_log log
        where log.sku = #{sku}
        order by log.seq
    </select>
</mapper>