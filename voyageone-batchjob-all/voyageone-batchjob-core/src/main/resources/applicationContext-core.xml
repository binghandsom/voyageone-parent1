<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xmlns:context="http://www.springframework.org/schema/context"
	   xsi:schemaLocation="http://www.springframework.org/schema/context
          http://www.springframework.org/schema/context/spring-context-3.2.xsd
          http://www.springframework.org/schema/beans
          http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

	<context:property-placeholder
		location="classpath*:config/job/**/config.properties" ignore-unresolvable="true" />

	<!-- 数据源配置 -->
	<!--<import resource="file:C:/usr/web/spring-config/datasource-config.xml" />-->
	<import resource="file:/usr/web/spring-config/datasource-config.xml" />
	<import resource="file:/usr/web/spring-config/dao-mongo.xml" />
	<!-- 定时任务 -->
	<import resource="classpath*:config/job/**/*-config.xml" />

    <!-- 自动扫描 -->
	<context:component-scan base-package="com.voyageone" />

    <!-- 初始化处理 -->
    <bean id="init" class="com.voyageone.common.configs.Initializer" init-method="init"/>

	<bean class="com.voyageone.batch.core.util.SetPriceUtils"/>

	<!-- REST SDK 配置 -->
	<bean id="restTemplate" class="org.springframework.web.client.RestTemplate"/>
	<bean id="voApiDefaultClient" class="com.voyageone.web2.sdk.api.VoApiDefaultClient">
		<constructor-arg ref="restTemplate" />
		<constructor-arg name="serverUrl" value="http://localhost:8080/rest"/>
		<constructor-arg name="connectTimeout" value="3000"/><!-- ms -->
		<constructor-arg name="readTimeout" value="90000"/><!-- ms -->
	</bean>
</beans>
