<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:mongo="http://www.springframework.org/schema/data/mongo"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
          http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">
    <!-- ============================BHFO=================================================== --> 
    <bean id="Channle_BHFO" class="org.springframework.beans.factory.config.FieldRetrievingFactoryBean">
		<property name="staticField" value="com.voyageone.common.configs.Enums.ChannelConfigEnums.Channel.BHFO" />
	</bean>	
   	<bean id="PostOrderBHFO" class="com.voyageone.batch.oms.job.logic.PostOrderBHFO">
	</bean>	        
   <bean id="PostOrderBHFOJob"
		class="com.voyageone.batch.oms.job.PostOrderToClientJob">
		<property name="taskCheck">
			<value>PostOrderBHFOJob</value>
		</property>
		<property name="postOrderLogic">
			<ref local="PostOrderBHFO"/>
		</property>  
		<property name="channel" >
			<ref local="Channle_BHFO"/>
		</property> 
	</bean>	
	<bean id="PostOrderBHFOTask"
		class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
		<property name="targetObject">
			<ref local="PostOrderBHFOJob" />
		</property>
		<property name="targetMethod">
			<value>postOrderJob</value>
		</property>
	</bean>	
	<bean id="PostOrderBHFOTaskContri" 
		name="PostOrderBHFOTaskContri"
		class="org.springframework.scheduling.quartz.CronTriggerFactoryBean">
		<property name="jobDetail">
			<ref bean="PostOrderBHFOTask" />
		</property>
		<property name="cronExpression">
			<value>${quartz.order.postorder.transfer}</value>
		</property>
	</bean>
