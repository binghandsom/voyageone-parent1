<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:mongo="http://www.springframework.org/schema/data/mongo"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
          http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">
    <!-- ============================SneakerHead_MOB==================================================== --> 
    <bean id="SneakerHead_MOB" class="org.springframework.beans.factory.config.FieldRetrievingFactoryBean">
		<property name="staticField" value="com.voyageone.batch.oms.emum.MagentoType.SNEAKER_MOB" />
	</bean>  
	<bean id="OrderFromSneakerHeadMobJob"
		class="com.voyageone.batch.oms.job.NewOrderMagentoImportJob">
		<property name="taskCheck">
			<value>OrderFromSneakerHeadMobJob</value>
		</property>
		<property name="magentoType" ref="SneakerHead_MOB" /> 
		
	</bean>	
	<bean id="OrderFromSneakerHeadMobTask"
		class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
		<property name="targetObject">
			<ref local="OrderFromSneakerHeadMobJob" />
		</property>
		<property name="targetMethod">
			<value>CreateMagentoOrder</value>
		</property>
	</bean>	
	<bean id="OrderFromSneakerHeadMobContri" 
		name="OrderFromSneakerHeadMobContri"
		class="org.springframework.scheduling.quartz.CronTriggerFactoryBean">
		<property name="jobDetail">
			<ref bean="OrderFromSneakerHeadMobTask" />
		</property>
		<property name="cronExpression">
			<value>${quartz.order.postorder.transfer}</value>
		</property>
	</bean>
	
    <!-- =================================SneakerHead_WEB============================================== -->      
	<bean id="SneakerHead_WEB" class="org.springframework.beans.factory.config.FieldRetrievingFactoryBean">
		<property name="staticField" value="com.voyageone.batch.oms.emum.MagentoType.SNEAKER_WEB" />
	</bean>	  
	<bean id="OrderFromSneakerHeadWebJob"
		class="com.voyageone.batch.oms.job.NewOrderMagentoImportJob">
		<property name="taskCheck">
			<value>OrderFromSneakerHeadWebJob</value>
		</property>
		<property name="magentoType" ref="SneakerHead_WEB" /> 
		
	</bean>	
	<bean id="OrderFromSneakerHeadWebTask"
		class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
		<property name="targetObject">
			<ref local="OrderFromSneakerHeadWebJob" />
		</property>
		<property name="targetMethod">
			<value>CreateMagentoOrder</value>
		</property>
	</bean>	
	<bean id="OrderFromSneakerHeadWebContri" 
		name="OrderFromSneakerHeadWebContri"
		class="org.springframework.scheduling.quartz.CronTriggerFactoryBean">
		<property name="jobDetail">
			<ref bean="OrderFromSneakerHeadWebTask" />
		</property>
		<property name="cronExpression">
			<value>${quartz.order.magento.transfer}</value>
		</property>
	</bean>


</beans>
