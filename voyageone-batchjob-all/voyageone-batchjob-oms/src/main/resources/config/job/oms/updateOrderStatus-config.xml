<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:mongo="http://www.springframework.org/schema/data/mongo"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
          http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

   <bean id="UpdateOrderStatusJob"
		class="com.voyageone.batch.oms.job.UpdateOrderStatusJob">
		<property name="taskCheck">
			<value>UpdateOrderStatusJob</value>
		</property> 
				
	</bean>	
	<bean id="UpdateOrderStatusTask"
		class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
		<property name="targetObject">
			<ref local="UpdateOrderStatusJob" />
		</property>
		<property name="targetMethod">
			<value>run</value>
		</property>
	</bean>	
	<bean id="UpdateOrderStatusTaskContri" 
		name="UpdateOrderStatusTaskContri"
		class="org.springframework.scheduling.quartz.CronTriggerFactoryBean">
		<property name="jobDetail">
			<ref bean="UpdateOrderStatusTask" />
		</property>
		<property name="cronExpression">
			<value>${quartz.order.postorder.transfer}</value>
		</property>
	</bean>


</beans>
