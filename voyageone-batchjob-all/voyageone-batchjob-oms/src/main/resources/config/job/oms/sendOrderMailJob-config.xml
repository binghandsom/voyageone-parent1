<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:mongo="http://www.springframework.org/schema/data/mongo"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
          http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">
          
<!-- ===================add by eric for sendOrderMail start=========== -->
	<bean id="SendOrderMailJob"
		class="com.voyageone.batch.oms.job.SendOrderMailJob">
	</bean>
	
	<bean id="SendOrderMailTask"
		class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
		<property name="targetObject">
			<ref local="SendOrderMailJob" />
		</property>
		<property name="targetMethod">
			<value>run</value>
		</property>
		<property name="concurrent">
			<value>false</value>
		</property>
	</bean>
	<bean id="SendOrderMailTaskContri"
		name="SendOrderMailTaskContri"
		class="org.springframework.scheduling.quartz.CronTriggerFactoryBean">
		<property name="jobDetail">
			<ref bean="SendOrderMailTask" />
		</property>
		<property name="cronExpression">
			<value>${quartz.order.send.csv.mail}</value>
		</property>
	</bean>
	<bean id="SendSameOrderMailJob"
		class="com.voyageone.batch.oms.job.SendSameOrderMailJob">
	</bean>
	
	<bean id="SendSameOrderMailTask"
		class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
		<property name="targetObject">
			<ref local="SendSameOrderMailJob" />
		</property>
		<property name="targetMethod">
			<value>run</value>
		</property>
		<property name="concurrent">
			<value>false</value>
		</property>
	</bean>
	<bean id="sendSameOrderTaskContri"
		name="sendSameOrderTaskContri"
		class="org.springframework.scheduling.quartz.CronTriggerFactoryBean">
		<property name="jobDetail">
			<ref bean="SendSameOrderMailTask" />
		</property>
		<property name="cronExpression">
			<value>${quartz.order.send.sameorder.mail}</value>
		</property>
	</bean>
	
<!-- ===================add by eric for sendOrderMail end=========== -->

	<bean id="SendTopRankingTask"
		class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
		<property name="targetObject">
			<ref local="SendOrderMailJob" />
		</property>
		<property name="targetMethod">
			<value>sendTopSpendingRanking</value>
		</property>
		<property name="concurrent">
			<value>false</value>
		</property>
	</bean>
	<bean id="SendTopRankingTaskContri"
		name="SendTopRankingTaskContri"
		class="org.springframework.scheduling.quartz.CronTriggerFactoryBean">
		<property name="jobDetail">
			<ref bean="SendTopRankingTask" />
		</property>
		<property name="cronExpression">
			<value>${quartz.spending.top.ranking.mail}</value>
		</property>
	</bean>
	
</beans>
