<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:mongo="http://www.springframework.org/schema/data/mongo"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
          http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">
	
    <!-- =================================JuicyCouture============================================== -->      
	<bean id="JuicyCouture" class="org.springframework.beans.factory.config.FieldRetrievingFactoryBean">
		<property name="staticField" value="com.voyageone.batch.oms.emum.MagentoType.JUICY" />
	</bean>	  
	<bean id="OrderFromJuicyCoutureJob"
		class="com.voyageone.batch.oms.job.NewOrderMagentoImportJob">
		<property name="taskCheck">
			<value>OrderFromJuicyCoutureWebJob</value>
		</property>
		<property name="magentoType" ref="JuicyCouture" /> 
		
	</bean>	
	<bean id="OrderFromJuicyCoutureTask"
		class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
		<property name="targetObject">
			<ref local="OrderFromJuicyCoutureJob" />
		</property>
		<property name="targetMethod">
			<value>CreateMagentoOrder</value>
		</property>
		<property name="concurrent">
			<value>false</value>
		</property>
	</bean>	
	<bean id="OrderFromJuicyCoutureContri"
		name="OrderFromJuicyCoutureContri"
		class="org.springframework.scheduling.quartz.CronTriggerFactoryBean">
		<property name="jobDetail">
			<ref bean="OrderFromJuicyCoutureTask" />
		</property>
		<property name="cronExpression">
			<value>${quartz.order.magento.transfer}</value>
		</property>
	</bean>


</beans>
