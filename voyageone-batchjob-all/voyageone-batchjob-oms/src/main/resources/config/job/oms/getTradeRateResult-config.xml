<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:mongo="http://www.springframework.org/schema/data/mongo"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
          http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">
   <bean id="GetTradeRateResultTaskJob"
		class="com.voyageone.batch.oms.job.GetTradeRateResultJob">
		<property name="taskCheck">
			<value>GetTradeRateResultTaskJob</value>
		</property>
	</bean>	
	<bean id="GetTradeRateResultTask"
		class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
		<property name="targetObject">
			<ref local="GetTradeRateResultTaskJob" />
		</property>
		<property name="targetMethod">
			<value>run</value>
		</property>
	</bean>	
	<bean id="GetTradeRateResultTaskContri" 
		name="GetTradeRateResultTaskContri"
		class="org.springframework.scheduling.quartz.CronTriggerFactoryBean">
		<property name="jobDetail">
			<ref bean="GetTradeRateResultTask" />
		</property>
		<property name="cronExpression">
			<value>${quartz.order.getTradeRate.transfer}</value>
		</property>
	</bean>

</beans>
