<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xmlns:tx="http://www.springframework.org/schema/tx"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
     http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
     http://www.springframework.org/schema/tx  
     http://www.springframework.org/schema/tx/spring-tx-3.2.xsd">

    <bean id="dataSourceMain" class="com.mchange.v2.c3p0.ComboPooledDataSource" destroy-method="close">
        <property name="driverClass" value="com.mysql.jdbc.Driver" />
        <property name="jdbcUrl"
                  value="jdbc:mysql://10.0.0.59:3306/bi_master?useOldAliasMetadataBehavior=true&amp;useUnicode=true&amp;characterEncoding=UTF-8" />
        <property name="user" value="biuser"/>
        <property name="password" value="packpen"/>
    </bean>

    <bean id="biSqlSessionFactoryMain"
          class="org.mybatis.spring.SqlSessionFactoryBean"
          p:dataSource-ref="dataSourceMain"
          p:configLocation="classpath:com/voyageone/batch/bi/mybatis/myBatisConfig.xml"
          p:mapperLocations="classpath*:com/voyageone/batch/bi/mapper/*Mapper.xml"/>

    <bean id="mainTemplate" class="org.mybatis.spring.SqlSessionTemplate">
        <constructor-arg ref="biSqlSessionFactoryMain"/>
    </bean>

    <!--JDBC事务管理器-->
    <bean id="transactionManagerMain" class="org.springframework.jdbc.datasource.DataSourceTransactionManager"
          p:dataSource-ref="dataSourceMain"/>
    <tx:annotation-driven transaction-manager="transactionManagerMain"/>

    <bean id="biSqlSessionFactorySub"
          class="org.mybatis.spring.SqlSessionFactoryBean"
          p:dataSource-ref="dataSourceMain"
          p:configLocation="classpath:com/voyageone/batch/bi/mybatis/myBatisConfig.xml"
          p:mapperLocations="classpath*:com/voyageone/batch/bi/mapper/*Mapper.xml"/>

    <bean id="subTemplate" class="org.mybatis.spring.SqlSessionTemplate">
        <constructor-arg ref="biSqlSessionFactorySub"/>
    </bean>
    <!--JDBC事务管理器-->
    <bean id="transactionManagerSub" class="org.springframework.jdbc.datasource.DataSourceTransactionManager"
          p:dataSource-ref="dataSourceMain"/>
    <tx:annotation-driven transaction-manager="transactionManagerSub"/>

    <bean class="org.mybatis.spring.mapper.MapperScannerConfigurer">
        <property name="basePackage" value="com.voyageone.batch.bi.mapper"/>
        <property name="sqlSessionFactoryBeanName" value="biSqlSessionFactorySub"/>
    </bean>
</beans>