<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
     http://www.springframework.org/schema/beans/spring-beans-3.2.xsd  
     http://www.springframework.org/schema/context  
     http://www.springframework.org/schema/context/spring-context-3.2.xsd">  
     
    <!-- DAO相关配置 -->
    <import resource="file:/usr/web/spring-config/datasource-config.xml" />
    <!--<import resource="file:C:/usr/web/spring-config/datasource-config.xml" />-->
    <import resource="file:/usr/web/spring-config/datasource-config-mongo.xml" />
    <!--<import resource="dao-mongo-sample.xml" />-->
    <!-- SDK Client Config -->
    <import resource="file:/usr/web/spring-config/sdk-client-config-sample.xml" />
    <!--<import resource="sdk-client-config-sample.xml" />-->

	
	<context:component-scan base-package="com.voyageone">
        <context:exclude-filter type="annotation" expression="org.springframework.stereotype.Controller"/>
    </context:component-scan>
	
	<!-- 异常处理 -->
	<bean id="exceptionHandler" class="com.voyageone.core.exception.ExceptionHandler"/>
	
	<!-- 初始化业务Bean -->
	<!-- 消息初始化Bean -->
    <bean id="messagesInit" class="com.voyageone.core.init.MessageHelp" init-method="initMessagesMap"/>

    <!-- 配置内容初始化Bean -->
    <bean id="commonConfigInit" class="com.voyageone.common.configs.Initializer" init-method="init"/>

</beans>
