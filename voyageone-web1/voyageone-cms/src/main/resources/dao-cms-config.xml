		<!-- 正式环境 -->
		<!--<property name="driverUrl">
            <value>jdbc:mysql://1ee2deee2bd6ee2d0859c4d9871ce0d7f4f23345.rackspaceclouddb.com:3306/Synship?user=synship_app&amp;password=NHY^7ujm;useOldAliasMetadataBehavior=true&amp;useUnicode=true&amp;characterEncoding=UTF-8</value>
        </property>
        <property name="user" value="synship_app" />
        <property name="password" value="NHY^7ujm" />-->

	    <property name="alias" value="Pool_data_master_cms" />
	    <property name="prototypeCount" value="1" />
	    <property name="maximumConnectionCount" value="10" />
	    <property name="minimumConnectionCount" value="3" />
	    <property name="testBeforeUse" value="true"/>
	    <property name="houseKeepingTestSql" value="select CURRENT_DATE" />
	    <property name="houseKeepingSleepTime" value="900000" />
	    <property name="maximumActiveTime" value="900000"/>
	    <property name="simultaneousBuildThrottle" value="50" />
	    <property name="maximumConnectionLifetime" value="14400000" />
	</bean>
	
	<bean id="sqlSessionFactoryMasterCms" 
		class="org.mybatis.spring.SqlSessionFactoryBean"
		p:dataSource-ref="dataSourceMasterCms"
		p:configLocation="classpath:com/voyageone/mybatis/myBatisConfig.xml"
		p:mapperLocations="classpath*:com/voyageone/mybatis/mappers/**/*Mapper.xml" />
		
	<bean id="updateTemplateCms" class="org.mybatis.spring.SqlSessionTemplate">
		<constructor-arg ref="sqlSessionFactoryMasterCms" />
	</bean>
		
	<!-- JDBC事务管理器 -->
	<bean id="transactionManagerCms" class="org.springframework.jdbc.datasource.DataSourceTransactionManager" 
	    p:dataSource-ref="dataSourceMasterCms" />

	<bean id="simpleTransactionCms" class="com.voyageone.common.components.transaction.SimpleTransaction"
		  p:transactionManager-ref="transactionManagerCms"/>

	<bean id="transactionRunnerCms" class="com.voyageone.common.components.transaction.TransactionRunner"
		  p:simpleTransaction-ref="simpleTransactionCms"/>
		  
	<tx:annotation-driven transaction-manager="transactionManagerCms" />
	    
