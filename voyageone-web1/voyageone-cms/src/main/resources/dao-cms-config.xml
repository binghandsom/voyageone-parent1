			<value>jdbc:mysql://localhost:3306/Synship?user=app&amp;password=ZAQ!2wsx;useOldAliasMetadataBehavior=true&amp;useUnicode=true&amp;characterEncoding=UTF-8</value>
		</property>
		<property name="user" value="app" />
