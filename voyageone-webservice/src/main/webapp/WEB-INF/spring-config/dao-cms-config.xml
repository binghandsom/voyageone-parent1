<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xmlns:p="http://www.springframework.org/schema/p"
	   xmlns:tx="http://www.springframework.org/schema/tx"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans
     http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
     http://www.springframework.org/schema/tx  
     http://www.springframework.org/schema/tx/spring-tx-3.2.xsd">

	<bean id="dataSourceMasterCms" class="com.mchange.v2.c3p0.ComboPooledDataSource" destroy-method="close">
		<property name="driverClass" value="com.mysql.jdbc.Driver" />
		<property name="jdbcUrl"
				  value="jdbc:mysql://10.0.0.24:3306/voyageone_cms?user=root&amp;password=sneakerhead&amp;useOldAliasMetadataBehavior=true&amp;useUnicode=true&amp;characterEncoding=UTF-8" />
		<property name="user" value="root"/>
		<property name="password" value="sneakerhead"/>
	</bean>

	<bean id="sqlSessionFactoryMasterCms" 
		class="org.mybatis.spring.SqlSessionFactoryBean"
		p:dataSource-ref="dataSourceMasterCms"
		p:configLocation="classpath:com/voyageone/mybatis/myBatisConfig.xml"
		p:mapperLocations="classpath*:com/voyageone/mybatis/mappers/**/*Mapper.xml" />
		
	<bean id="updateTemplateCms" class="org.mybatis.spring.SqlSessionTemplate">
		<constructor-arg ref="sqlSessionFactoryMasterCms" />
	</bean>
		
	<!-- JDBC事务管理器 -->
	<bean id="transactionManagerCms" class="org.springframework.jdbc.datasource.DataSourceTransactionManager" 
	    p:dataSource-ref="dataSourceMasterCms" />

	<tx:annotation-driven transaction-manager="transactionManagerCms" />

	<bean id="dataSourceSlaveCms" class="com.mchange.v2.c3p0.ComboPooledDataSource" destroy-method="close">
		<property name="driverClass" value="com.mysql.jdbc.Driver" />
		<property name="jdbcUrl"
				  value="jdbc:mysql://10.0.0.24:3306/voyageone_cms?user=root&amp;password=sneakerhead&amp;useOldAliasMetadataBehavior=true&amp;useUnicode=true&amp;characterEncoding=UTF-8" />
		<property name="user" value="root"/>
		<property name="password" value="sneakerhead"/>
	</bean>

	<bean id="sqlSessionFactorySlaveCms" 
		class="org.mybatis.spring.SqlSessionFactoryBean"
		p:dataSource-ref="dataSourceSlaveCms"
		p:configLocation="classpath:com/voyageone/mybatis/myBatisConfig.xml"
		p:mapperLocations="classpath*:com/voyageone/mybatis/mappers/**/*Mapper.xml" />
		
	<bean id="selectTemplateCms" class="org.mybatis.spring.SqlSessionTemplate">
		<constructor-arg ref="sqlSessionFactorySlaveCms" />
	</bean>
	
</beans>