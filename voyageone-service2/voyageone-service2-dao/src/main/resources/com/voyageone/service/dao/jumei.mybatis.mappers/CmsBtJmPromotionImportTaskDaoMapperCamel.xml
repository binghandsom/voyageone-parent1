   </update>

    <delete id="delete">
        delete from  cms_bt_jm_promotion_import_task
        where id=#{id}

    </delete>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id" >
        INSERT INTO cms_bt_jm_promotion_import_task
        (
              cms_bt_jm_promotion_id,
              is_import,
              file_name,
              file_path,
              error_msg,
              success_rows,
              failures_rows,
              failures_path,
              error_code,
              begin_time,
              end_time,
