    <select id="select_promotion_detail" resultMap="bt_promotion_model_detail_map" parameterType="HashMap">
        SELECT
            t1.*, t2.*,t3.tag_name
        FROM
            (
                SELECT
                    b.promotion_id,
                    b.model_id,
                    b.product_model,
                    b.cat_path,
                    b.num_iid,
                    b.syn_flg,
                    b.created
                FROM
                    voyageone_cms2.cms_bt_promotion_model b
                <where>
                    <if test="promotionId != null">
                        promotion_id =  #{promotionId,jdbcType=INTEGER}
                    </if>
                    <if test="key !=null and key != ''">
                        and (
                        product_model like '%${key}%'
                        )
                    </if>
                </where>
                <if test="start != null and length != null">
                    LIMIT #{start}, #{length}
                </if>
            ) t1
        LEFT JOIN (
            SELECT
                a.promotion_id,
                a.model_id,
                a.product_id,
                a.product_code,
                a.product_name,
                a.tag_id,
                MAX(a.promotion_price) AS promotion_price_max,
                MIN(a.promotion_price) AS promotion_price_min,
                MAX(a.sale_price) AS sale_price_max,
                MIN(a.sale_price) AS sale_price_min,
                a.msrp AS msrp
            FROM
                voyageone_cms2.cms_bt_promotion_code a
            GROUP BY
                a.promotion_id,
                a.model_id
        ) t2 ON t1.model_id = t2.model_id
        AND t1.promotion_id = t2.promotion_id left join voyageone_cms2.cms_bt_tag t3 on t2.tag_id = t3.tag_id
    </select>
