<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.voyageone.service.dao.jumei.CmsBtJmPromotionUpdateTaskDao">
    <resultMap id="ResultMap" type="CmsBtJmPromotionUpdateTaskModel">
        
    </resultMap>
	
    <select id="selectList" resultMap="ResultMap">

        select id,jm_bt_promotion_id,begin_time,end_time,error_msg,state,created,creater        from cms_bt_jm_promotion_update_task
    </select>
    <select id="select" resultMap="ResultMap">
        select id,jm_bt_promotion_id,begin_time,end_time,error_msg,state,created,creater from cms_bt_jm_promotion_update_task where id=#{id}
    </select>

     <update id="update">
        update cms_bt_jm_promotion_update_task
        set

            `jm_bt_promotion_id`=#{jmBtPromotionId}
            ,`begin_time`=#{beginTime}
            ,`end_time`=#{endTime}
            ,`error_msg`=#{errorMsg}
            ,`state`=#{state}
         where id=#{id}   
   </update>

    <delete id="delete">
        delete from  cms_bt_jm_promotion_update_task
        where id=#{id}

    </delete>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id" >
        INSERT INTO cms_bt_jm_promotion_update_task
        (
              `jm_bt_promotion_id`,
              `begin_time`,
              `end_time`,
              `error_msg`,
              `state`,
              `created`,
              `creater`
        )
        VALUES(
              #{jmBtPromotionId},
              #{beginTime},
              #{endTime},
              #{errorMsg},
              #{state},
              #{created},
              #{creater}
        )
    </insert>
</mapper>