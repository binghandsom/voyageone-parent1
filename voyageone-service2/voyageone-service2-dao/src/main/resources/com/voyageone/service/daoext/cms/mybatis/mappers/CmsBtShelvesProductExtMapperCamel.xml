            </if>
            <if test="platformImageId != null" >
                `platform_image_id` = #{platformImageId,jdbcType=VARCHAR},
            </if>
            <if test="status != null" >
                `status` = #{status,jdbcType=INTEGER},
            </if>
            <if test="modifier != null" >
