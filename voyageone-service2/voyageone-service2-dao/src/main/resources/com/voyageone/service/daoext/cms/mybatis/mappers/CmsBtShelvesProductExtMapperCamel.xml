            <if test="modified != null" >
                `modified` = #{modified,jdbcType=TIMESTAMP},
            </if>
            <if test="modified == null" >
                `modified` = now(),
            </if>
        </set>
        where
        `shelves_id` = #{shelvesId,jdbcType=INTEGER},
