        update cms_bt_shelves_product
        <set >
            `platform_image_url` = '',
            <if test="modifier != null and modifier != ''" >
                `modifier` = #{modifier,jdbcType=VARCHAR},
            </if>
            <if test="modified != null" >
                `modified` = #{modified,jdbcType=TIMESTAMP},
